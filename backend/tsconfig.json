{
    "compilerOptions": { 
      "target": "ES2020",
      "module": "ESNext",
      "outDir": "bin",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "checkJs": true,
      "allowJs": true,
      "moduleResolution": "node",
      "types": [
        "node"
      ],
      "lib": [
        "es6"
      ],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowUnreachableCode": true,
       "useUnknownInCatchVariables": false,  
  },
    "include": [
      "./**/*"
    ],
    "exclude": [
      "node_modules",
    ]
  }